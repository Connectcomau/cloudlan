body
	margin 0
	padding 0
	font-family 'Helvetica'

#map
	height 100%
	width 100%

.dc_list
	position absolute
	top 100px
	left 10px

	.dc
		cursor pointer
		background-color #3498db
		margin-bottom 0px
		border-radius 4px
		color #fff
		margin-bottom 20px

		.heading
			padding 10px 20px
	
	.dc_ports
		text-align right
		background-color #fff
		border 3px solid #3498db
		border-top 0px
		padding-right 5px
		font-size 20px
	
		.port
			cursor pointer
			color #16a085

			&.highlight
				color #e74c3c

.dc_select
	position absolute
	left 10px
	top 10px
	width 300px

.dropdown-toggle
	width 320px !important

.port_select
.dc_info
	position absolute
	top 20%
	width 300px
	left 50%
	margin 0 0 0 -150px
	background-color #fff
	border-radius 6px
	color #16a085
	border 3px solid #16A085

	.content
		padding 10px 20px

	.add_button
	.add_link
	.remove_link
		background-color #16A085
		text-align center
		padding 4px
		color #fff
		cursor pointer


